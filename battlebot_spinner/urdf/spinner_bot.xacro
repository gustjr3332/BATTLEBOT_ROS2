<!-- urdf/spinner_bot.xacro -->
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="spinner_bot">
  <link name="world"/> <joint name="world_to_base_link_fixed_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.5 0.2"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.5 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- Spinner Weapon -->
  <link name="spinner">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.3"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.3"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.02" iyy="0.02" izz="0.01" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <joint name="spinner_joint" type="continuous">
    <parent link="base_link"/>
    <child link="spinner"/>
    <origin xyz="0 0 0.11" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="5.0" velocity="10.0"/>
  </joint>
</robot>
